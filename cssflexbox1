}

/* Responsive: stack vertically under 700px */
@media (max-width:700px){
  .main {
    flex-direction:column; /* stack sections vertically */
    align-items:center;
  }
  .profile {width:90%}
  .site-header {
    flex-direction:column;
    gap:0.5rem;
    align-items:center;
  }
