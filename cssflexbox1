/* Portfolio (Flexbox) */
:root {
  --gap: 1.25rem;
  --max-width: 1100px;
  --bg: #f7f7fb;
  --accent: #2c6fb6;
}

* {box-sizing: border-box}
body {
  margin:0;
  font-family: system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
  background: var(--bg);
  color:#111;
  display:flex;
  min-height:100vh;
  flex-direction:column;
  align-items:center;
}

/* Header: name left, nav right - horizontal layout with flex */
.site-header {
  width:100%;
  max-width:var(--max-width);
  display:flex;
  justify-content:space-between; /* pushes brand left and nav right */
  align-items:center;             /* vertical centering */
  padding:1rem var(--gap);
  background:white;
  margin-top:1rem;
  border-radius:8px;
  box-shadow:0 2px 6px rgba(0,0,0,0.05);
}

.site-header .brand { font-weight:700; color:var(--accent) }
.site-header .nav a {
  margin-left:1rem;
  text-decoration:none;
  color:#333;
}

/* Main area uses flex to place about text and image side-by-side */
.main {
  width:100%;
  max-width:var(--max-width);
  display:flex;             /* side-by-side layout */
  gap:var(--gap);
  align-items:center;       /* center vertically */
  justify-content:center;
  padding:2rem var(--gap);
}

/* about section flexes to fill remaining space */
.about {
  flex:1 1 0;
  background:white;
  padding:1.5rem;
  border-radius:8px;
  box-shadow:0 2px 6px rgba(0,0,0,0.04);
}

/* profile image column */
.profile {
  width:320px;
  display:flex;
  flex-direction:column;
  align-items:center;
  gap:0.5rem;
}
.profile img {
  width:100%;
  max-width:320px;
  border-radius:12px;
  display:block;
}

/* footer */
.site-footer {
  width:100%;
  max-width:var(--max-width);
  text-align:center;
