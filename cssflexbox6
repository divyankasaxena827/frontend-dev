/* Blog layout using grid-template-areas */
*{box-sizing:border-box}
body{margin:0;font-family:system-ui,Arial;background:#fafafa;color:#222}
.page{max-width:1100px;margin:0 auto;padding:16px}
.site-header{display:flex;justify-content:space-between;align-items:center;padding:8px 0}
.site-header nav a{margin-left:12px;text-decoration:none;color:#333}

/* grid layout with template areas */
.main{
  display:grid;
  grid-template-columns: 1fr 320px;
  grid-template-areas:
    "posts sidebar";
  gap:18px;
  align-items:start;
  margin-top:12px;
}

/* posts area shows two posts side-by-side using grid */
.posts{
  grid-area:posts;
  display:grid;
  grid-template-columns: 1fr 1fr; /* two posts side-by-side */
  gap:12px;
}

/* sidebar area */
.sidebar{grid-area:sidebar;background:white;padding:12px;border-radius:8px;box-shadow:0 2px 6px rgba(0,0,0,0.04)}

/* post card */
.post{background:white;padding:14px;border-radius:8px;box-shadow:0 1px 6px rgba(0,0,0,0.03)}

/* footer */
.site-footer{text-align:center;margin-top:18px;color:#666}

/* Below 800px, sidebar should move below main content */
@media (max-width:800px){
  .main{
    grid-template-columns:1fr;
    grid-template-areas:
      "posts"
      "sidebar";
  }
  .posts{grid-template-columns:1fr} /* single column posts */
}
